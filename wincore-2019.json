{
    "variables": {
        "environment": null,
        "tier": null,
        "application": null,
        "account": null,
        "vpcId": null,
        "subnetId": null,
        "securityGroupId": null,

        "amiName": "{{user `application`}}-ami-{{user `tier`}}-{{timestamp}}",
        "amiDescription": "Windows Core 2019 - {{user `application`}} - {{user `tier`}}",

        "vpc_id": "{{user `vpcId`}}",
        "subnet_id": "{{user `subnetId`}}",
        "security_group_id": "{{user `securityGroupId`}}",
        "ssh_keypair_name": "{{user `application`}}-{{user `tier`}}-{{user `environment`}}",
        "ssh_private_key_file": "c:\\ssh_keys\\{{user `application`}}-{{user `tier`}}-{{user `environment`}}.pem",
        "profile": "{{user `environment`}}dsadmin",
        "iam_instance_profile": "discovery_instance_profile",

        "files_source_path": "./files/",
        "app_source_path": "./apps/",
        "application_path": "{{user `application`}}/",
        "file_dest_path": "C:\\temp\\",
        "startup_path" : "C:\\tna-startup\\",
        "ps_startup_script" : "server-setup.ps1",
        "ps_env_upd_script" : "updEnv.ps1",
        "file_downloader" : "file-downloader.ps1"
    },
    "builders": [
        {
            "winrm_username": "Administrator",
            "type": "amazon-ebs",
            "instance_type": "t3a.large",
            "user_data_file": "./scripts/wincore-2019.ps1",
            "ssh_interface": "private_ip",
            "ssh_keypair_name": "{{user `ssh_keypair_name`}}",
            "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
            "region": "eu-west-2",
            "profile": "{{user `profile`}}",
            "iam_instance_profile": "{{user `iam_instance_profile`}}",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "Windows_Server-2019-English-Core-Base*",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "801119661308"
                ],
                "most_recent": true
            },
            "launch_block_device_mappings": [{
                "device_name": "/dev/sda1",
                "volume_size": 30,
                "volume_type": "gp2",
                "delete_on_termination": true,
                "encrypted": true
            }],
            "ami_name": "{{user `amiName`}}",
            "ami_description": "{{user `amiDescription`}}",
            "ami_users": "{{user `ami_users`}}",
            "associate_public_ip_address": false,

            "communicator": "winrm",
            "winrm_timeout": "10m",
            "winrm_port": 5985,

            "run_tags": {"Name": "discovery_ami_{{user `tier`}}_{{user `environment`}}"},
            "vpc_id": "{{user `vpc_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "security_group_id": "{{user `security_group_id`}}",
            "tags": {
                "Name": "{{user `amiName`}}",
                "Service": "{{user `application`}}",
                "ApplicationType": ".NET",
                "Role": "{{user `tier`}}",
                "Environment": "{{user `environment`}}",
                "CostCentre": "53",
                "Owner": "Digital Services",
                "CreatedBy": "Jenkins build pipeline",
                "Terraform": "false"
            }
        }
    ],
    "description": "Build Windows Core Server 2019 Server for Discovery",
    "min_packer_version": "1.7.0",
    "post-processors": [],
    "provisioners": [
        {
            "type": "powershell",
            "inline": [
                "md {{user `file_dest_path`}}",
                "md c:\\tna-startup"
            ]
        },
        {
        	"type": "file",
        	"source": "{{user `files_source_path`}}{{user `file_downloader`}}",
        	"destination": "{{user `file_dest_path`}}{{user `file_downloader`}}"
        },
        {
            "type": "file",
            "source": "{{user `app_source_path`}}{{user `application_path`}}{{user `ps_startup_script`}}",
            "destination": "{{user `file_dest_path`}}{{user `ps_startup_script`}}"
        },
        {
            "type": "file",
            "source": "{{user `app_source_path`}}{{user `application`}}/startup.ps1",
            "destination": "{{user `startup_path`}}startup.ps1"
        },
        {
            "type": "file",
            "source": "{{user `app_source_path`}}{{user `application_path`}}{{user `ps_env_upd_script`}}",
            "destination": "{{user `startup_path`}}{{user `ps_env_upd_script`}}"
        },
        {
            "type": "powershell",
            "elevated_user": "{{user `user`}}",
            "elevated_password": "{{user `password`}}",
            "inline": [
                "cd {{user `file_dest_path`}}",
                "./{{user `ps_startup_script`}} -environment {{user `environment`}} -tier {{user `tier`}} -application {{user `application`}}"
            ]
        }
    ]
}
